@inject SignInManager<IdentityUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<ul class="manage-account__content-nav-wrap">
    <li class="manage-account__content-nav-wrap-item"><a class="manage-account__content-nav-wrap-item-link @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Index">Email</a></li>
    <li class="manage-account__content-nav-wrap-item"><a class="manage-account__content-nav-wrap-item-link @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">Пароль</a></li>
    <li class="manage-account__content-nav-wrap-item"><a class="manage-account__content-nav-wrap-item-link" id="rides" asp-page="./UserRides">Поїздки</a></li>

    @if (hasExternalLogins)
    {
        <li id="external-logins" class="nav-item"><a id="external-login" class="nav-link @ManageNavPages.ExternalLoginsNavClass(ViewContext)" asp-page="./ExternalLogins">External logins</a></li>
    }
    @*<li class="nav-item"><a class="nav-link @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)" id="two-factor" asp-page="./TwoFactorAuthentication">Two-factor authentication</a></li>
    <li class="nav-item"><a class="nav-link @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data" asp-page="./PersonalData">Personal data</a></li>*@
</ul>
