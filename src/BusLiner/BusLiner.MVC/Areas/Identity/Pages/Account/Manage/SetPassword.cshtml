@page
@model SetPasswordModel
@{
    ViewData["Title"] = "Встановлення паролю";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="manage-account__content-option-password_change">
    <div class="manage-account__content-option-password_change-title" style="margin-bottom: 0;">@ViewData["Title"]</div>
    <p class="manage-account__content-option-password_change-subtitle">
        Встановіть пароль для вашого профілю. щоб мати змогу входити в аккаунт за допомогою електронної пошти.
    </p>
    <partial name="_StatusMessage" for="StatusMessage" />
    <div class="manage-account__content-option-password_change-wrap">
        <form id="set-password-form" class="manage-account__content-option-password_change-wrap-form" method="post">
            <div class="manage-account__content-option-password_change-wrap-form-input">
                <label asp-for="Input.NewPassword">Новий пароль</label>
                <input asp-for="Input.NewPassword" aria-required="true" />
                <span asp-validation-for="Input.NewPassword"></span>
            </div>
            <div class="manage-account__content-option-password_change-wrap-form-input">
                <label asp-for="Input.ConfirmPassword">Повторіть пароль</label>
                <input asp-for="Input.ConfirmPassword" aria-required="true" />
                <span asp-validation-for="Input.ConfirmPassword"></span>
            </div>
            <button type="submit" class="manage-account__content-option-password_change-wrap-form-submit">Встановити пароль</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
