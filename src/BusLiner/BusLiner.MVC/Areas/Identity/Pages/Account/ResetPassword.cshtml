@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Скидання паролю";
}

<div class="manage-account__content-option-email_change manage-account__content-option-email_change-resend">
    <div class="manage-account__content-option-email_change-title">@ViewData["Title"]</div>
    <hr />
    <div class="manage-account__content-option-email_change-wrap manage-account__content-option-email_change-wrap-resend">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Input.Code" type="hidden" />
            <div class="manage-account__content-option-email_change-wrap-form-input" style="margin-bottom: 10px;">
                <label asp-for="Input.Email" class="form-label"></label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="manage-account__content-option-email_change-wrap-form-input" style="margin-bottom: 10px;">
                <label asp-for="Input.Password" class="form-label">Пароль</label>
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="manage-account__content-option-email_change-wrap-form-input">
                <label asp-for="Input.ConfirmPassword" class="form-label">Повторіть пароль</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="manage-account__content-option-email_change-wrap-form-submit">Скинути</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
